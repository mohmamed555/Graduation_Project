
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".Activities.Home">
    
    <RelativeLayout

        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:layout_above="@+id/textSpace"

            android:text="Welcome to our car service "
            android:textStyle="bold"
            android:fontFamily="@font/demi"
            />

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/textSpace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linerParent"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_120sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >


            <RelativeLayout

                android:id="@+id/craneParent"
                android:background="@color/white"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_100sdp">


                <ImageView
                     android:id="@+id/img1"
                    android:src="@drawable/crane"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/demi"
                    android:text="Crane"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:layout_below="@+id/img1"
                    android:layout_centerHorizontal="true"

                    />


            </RelativeLayout>

            <RelativeLayout
               android:id="@+id/mechanicalParent"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_100sdp">

                <ImageView
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mec"
                    android:layout_centerInParent="true"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/demi"
                    android:text="Mechanical"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:layout_below="@+id/img2"
                    android:layout_centerHorizontal="true"

                    />

            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >


            <RelativeLayout
                android:id="@+id/electricParent"
                android:background="@color/white"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_100sdp">


                <ImageView
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/elictric"
                    android:layout_centerInParent="true"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/demi"
                    android:text="Electric"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:layout_below="@+id/img3"
                    android:layout_centerHorizontal="true"

                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tiersParent"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_100sdp">

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tiers"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/demi"
                    android:text="Tiers"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:layout_below="@+id/img4"
                    android:layout_centerHorizontal="true"

                    />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >


            <RelativeLayout
                android:id="@+id/garageParent"
                android:background="@color/white"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_100sdp">

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/garage"
                    android:layout_centerInParent="true"
                   android:layout_marginBottom="@dimen/_5sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/demi"
                    android:text="Garage"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:layout_below="@+id/img5"
                    android:layout_centerHorizontal="true"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/aboutParent"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:layout_height="@dimen/_100sdp">

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/about"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/demi"
                    android:text="About us"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:layout_below="@+id/img6"
                    android:layout_centerHorizontal="true" />




            </RelativeLayout>


        </LinearLayout>



    </LinearLayout>



<RelativeLayout
    android:layout_below="@id/linerParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <TextView
        android:onClick="signOut"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:fontFamily="@font/demi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign out"

 />
</RelativeLayout>


</RelativeLayout>